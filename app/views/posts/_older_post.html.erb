<div class="post">
  <div class="date">
    <%= older_post.created_at.strftime("%-m . %-d . %Y") %>
  </div>
  <div class="content">
    <div class="old thumbnail">
      <%= image_tag older_post.thumbnail.url(:thumb), :alt => older_post.title %>
    </div>
    <div class="old snippet">
      <h2><%= link_to_unless_current older_post.title, older_post %></h2>
      <p><%= truncate(older_post.text, length: 250, separator: ' ').gsub(/\n/, '<br/>').html_safe %></p>
    </div>
  </div>
</div>