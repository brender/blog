<div class="post">
  <div class="content">
    <div class="old thumbnail">
      <%= link_to_unless_current image_tag(older_post.thumbnail.url(:thumb), :alt => older_post.title), older_post %>
    </div>
    <div class="old snippet">
      <h2 class="post_title"><%= link_to_unless_current older_post.title, older_post %></h2>
      <div class="date"><%= older_post.created_at.strftime("%-m . %-d . %Y") %></div>
      <p><%= truncate(older_post.text, length: 250, separator: ' ').gsub(/\n/, '<br/>').html_safe %></p>
    </div>
  </div>
</div>