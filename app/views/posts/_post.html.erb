<div class="post">
  <div class="date">
    <%= post.created_at.strftime("%-m . %-d . %Y") %>
  </div>
  <div class="content">
    <h2><%= link_to post.title, post %></h2>
    <p><%= post.text.gsub(/\n/, '<br/>').html_safe %></p>
  </div>
  <div class="admin">
    <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete that? Like, really?'} %>
  </div>
</div>