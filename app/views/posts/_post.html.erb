<div>
  <p><%= post.created_at.strftime("%-m . %-d . %Y") %></p>
  <h2><%= link_to post.title, post %></h2>
  <p><%= post.text %></p>
  <p><%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete that? Like, really?'} %></p>
</div>