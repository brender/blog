<%= render @post %>

<div class="admin">
  <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete that? Like, really?'} %>
</div>

<div class="comments">
  <h2>Comments</h2>
  <%= render @post.comments %>
  <p class="write_comment_link"><%= link_to 'Write a Comment', new_post_comment_path(@post) %></p>
</div>
