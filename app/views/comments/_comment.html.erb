<div class="comment">
  <p class="commenter"><%= comment.commenter %></p>
  <p class="comment_body"><%= comment.body %></p>
</div>

<% if user_signed_in? %>
  <div class="admin">
    <%= link_to 'Destroy Comment', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure you want to delete that? Like, really?' } %>
  </div>
<% end %>